{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "es2015",
		"lib": [
			"es2016",
			"dom"
		],
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "junk_js_files",
		"paths": {
			"services": [
				"app/scripts/services/*"
			],
			"states": [
				"app/scripts/states/*",
				"app/scripts/states/index"
			]
		}
	},
	"include": [
		"app/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"dist"
	]
}
